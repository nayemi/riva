<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <hr>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <hr>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcome to Riva</h1>

    <h2>
      RIVA is a micro blogging service software built with
      <br>

      <%= link_to image_tag("rails.svg", alt: "Rails logo", width: "200"),
                  "https://rubyonrails.org/" %>
    </h2>

    <%= link_to "Join now!", signup_path, class: "btn btn-lg btn-primary" %>
  </div>


<% end %>